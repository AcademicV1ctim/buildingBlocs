{
  "dependencies": {
    "@prisma/adapter-pg": "^5.20.0",
    "@prisma/client": "^5.21.1",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^7.4.2",
    "express": "^4.19.2",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.16",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@playwright/test": "^1.47.2",
    "@types/node": "^22.7.2",
    "eslint": "^9.11.1",
    "globals": "^15.9.0",
    "prisma": "^5.21.1"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma",
    "seed": "node prisma/seed.js"
  },
  "scripts": {
    "postinstall": "npx prisma generate",
    "migration:dev": "dotenv -e .env -- npx prisma migrate dev",
    "migration:reset": "dotenv -e .env -- npx prisma migrate reset",
    "start": "dotenv -e .env.development -- node ./src/server.js",
    "test": "dotenv -e .env.test -- playwright test --config=configs/playwright.config.js",
    "lint": "eslint -c configs/eslint.config.mjs ./src/*",
    "test-trace": "npm test -- --reporter=html --trace on"
  }
}
